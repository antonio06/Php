{% block contenido %}
    <table class="bordered">
        <tr>
            <td>Persona</td>
            <td>Actividades</td>
            <td>Perfiles</td>
        </tr>
        {% for participante in participantes %}
            <tr>
                <td>{{ participante.codigo_persona }}</td>
                <td>{{ participante.codigo_actividad }}</td>
                <td>{{ participante.codigo_perfil }}</td>    
            </tr>
        {% endfor %}
    </table>
    <div class="center-align">
        <ul class="pagination">
            {% for arrayNumero in arrayNumeros %}
                <li class="active"><a href="../../Controller/partePublica/misActividades.php?pagina={{ arrayNumero }}" id="botonNum">{{ arrayNumero }}</a></li>
                {% endfor %}
        </ul>
    </div>
{% endblock %}
