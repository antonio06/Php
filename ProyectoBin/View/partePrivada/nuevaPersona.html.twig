{% block contenidoPanel %}

    <form class="col s12" action="../../Controller/partePrivada/insertarPersona.php" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="DNI">
                <label for="last_name">DNI</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="nombre">
                <label for="last_name">Nombre</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="apellido1">
                <label for="last_name">1º Apellido</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="apellido2">
                <label for="last_name">2º Apellido</label>
            </div>
            <div class="input-field col s3">
                <select class="browser-default" name="perfil">
                    <option value="" disabled selected>Perfiles</option>
                    {% for perfil in perfiles %}
                        <option value="{{ perfil }}">{{ perfil }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="file-field input-field col s6">
                <div class="btn">
                    <span>Foto/Logo</span>
                    <input type="file" id="foto" name="foto">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>   
            <div class="input-field col s2">
                <select class="browser-default" name="sexo">
                    <option value="" disabled selected>Sexo</option>
                    {% for sexo in sexo %}
                        <option value="{{ sexo }}">{{ sexo }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="input-field col s4">
                <label style="margin-top: -11%">Fecha Nacimiento</label>
                <input id="last_name" type="date" class="validate" name="fecha_nac">
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="direccion">
                <label for="last_name">Dirección</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="municipio">
                <label for="last_name">Municipio</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="provincia">
                <label for="last_name">Provincia</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="pais">
                <label for="last_name">Pais</label>
            </div>
            <div class="input-field col s3">
                <label style="margin-top: -11%">Fecha Alta</label>
                <input id="last_name" type="date" class="validate" name="fecha_alta">
                <label for="last_name"></label>
            </div>
            <div class="input-field col s3">
                <label style="margin-top: -11%">Fecha Baja</label>
                <input id="last_name" type="date" class="validate" name="fecha_baja">
                <label for="last_name"></label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="n_Seguridad_Social">
                <label for="last_name">Nº Seguridad Social</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="text" class="validate" name="n_Cuenta_Bancaria">
                <label for="last_name">Nº Cuenta Bancaria</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="email" class="validate" name="email">
                <label for="last_name">Email</label>
            </div>
            <div class="input-field col s3">
                <input id="last_name" type="password" class="validate" name="password">
                <label for="last_name">Password</label>
            </div>
            <div class="input-field col s3">
                <select class="browser-default" name="perfil_usuario">
                    <option value="" disabled selected>Perfiles Usuarios</option>
                    {% for perfilUsuario in perfilesUsuarios %}
                        <option value="{{ perfilUsuario }}">{{ perfilUsuario }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="input-field col s12">
                <input id="last_name" type="text" class="validate" name="observaciones">
                <label for="last_name">Observaciones</label>
            </div>
        </div>
        <input class="waves-effect waves-light btn" type="submit" value="Ingresar">
    </form>

{% endblock %}