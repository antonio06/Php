<table id="tablaActividades" class="bordered table-centered">
    <tr>
        <td>Codigo</td>
        <td>Título</td>
        <td>Estado</td>
        <td>Ubicación</td>
        <td>Fecha Inicio</td>
        <td>Fecha Fin</td>
        <td>Descriptor</td>
        <td><a href="#" data-action="nuevo" data-id="{{ actividad.codigo_actividad }}"><i class="fa fa-plus"></i></a></td>
    </tr>
    {% for actividad in actividades %}
        <tr>
            <td>{{ actividad.codigo_actividad }}</td>
            <td>{{ actividad.titulo }}</td>
            <td>{{ actividad.estado }}</td>
            <td>{{ actividad.ubicacion }}</td>
            <td>{{ actividad.fecha_inicio }}</td>
            <td>{{ actividad.fecha_fin }}</td>
            <td>{{ actividad.descriptor }}</td>
            <td>
                <div class="icons-container">
                    <a href="#" data-action="detalles" data-id="{{ actividad.codigo_actividad }}" class="icons"><i class="fa fa-search-plus"></i></a>
                        {% if esAdministrador != null %}
                        <a href="#" data-action="editar" data-id="{{ actividad.codigo_actividad }}" class="icons"><i class="fa fa-pencil"></i></a>
                        <a href="#" data-action="borrar" data-id="{{ actividad.codigo_actividad }}" class="icons"><i class="fa fa-times"></i></a>
                        {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
</table>
<div class="center-align">
    <ul class="pagination" id="paginacion">
        {% for arrayNumero in arrayNumeros %}
            <li class="active"><a href="#">{{arrayNumero}}</a></li>
        {% endfor %}
    </ul>
</div>
<input type="hidden" id="paginaActual" value="{{pagina}}">
