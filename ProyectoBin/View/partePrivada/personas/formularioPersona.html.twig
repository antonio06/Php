<div id="contenedorFormularioPersona">
    <form class="col s12 form-modal" action="#" method="POST" enctype="multipart/form-data" id="formularioPersonas">
        <div class="row">
            
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="DNI" id="dni_persona">
                <label for="last_name">DNI</label>
            </div>
            
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="nombre" id="nombre_persona">
                <label for="last_name">Nombre</label>
            </div>
            
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="apellido1" id="apellido1_persona">
                <label for="last_name">1º Apellido</label>
            </div>
            
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="apellido2" id="apellido2_persona">
                <label for="last_name">2º Apellido</label>
            </div>
            
            <div class="input-field col s4">
                <select class="browser-default" name="perfil">
                    <option value="" disabled selected>Perfiles</option>
                    {% for perfil in perfiles %}
                        <option value="{{ perfil }}" id="perfil_persona">{{ perfil }}</option>
                    {% endfor %}
                </select>
            </div>
                
            <div class="file-field input-field col s4">
                <div class="btn">
                    <span>Foto/Logo</span>
                    <input type="file" name="foto" id="foto_persona">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div> 
                
            <div class="input-field col s4">
                <select class="browser-default" name="sexo">
                    <option value="" disabled selected>Sexo</option>
                    {% for sexo in sexo %}
                        <option value="{{ sexo }}" id="sexo_persona">{{ sexo }}</option>
                    {% endfor %}
                </select>
            </div>
                
            <div class="input-field col s4">
                <label style="margin-top: -11%">Fecha Nacimiento</label>
                <input id="last_name" type="date" class="validate" name="fecha_nac" id="fecha_nac_persona">
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="direccion" id="direccion_persona">
                <label for="last_name">Dirección</label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="municipio" id="municipio_persona">
                <label for="last_name">Municipio</label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="provincia" id="provincia_persona">
                <label for="last_name">Provincia</label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="pais" id="pais_persona">
                <label for="last_name">Pais</label>
            </div>
                
            <div class="input-field col s4">
                <label style="margin-top: -11%">Fecha Alta</label>
                <input id="last_name" type="date" class="validate datepicker" name="fecha_alta" id="fecha_alta_persona">
                <label for="last_name"></label>
            </div>
                
            <div class="input-field col s4">
                <label style="margin-top: -11%">Fecha Baja</label>
                <input id="last_name" type="date" class="validate datepicker" name="fecha_baja" id="fecha_baja_persona">
                <label for="last_name"></label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="n_Seguridad_Social" id="n_seguridad_social_persona">
                <label for="last_name">Nº Seguridad Social</label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="text" class="validate" name="n_Cuenta_Bancaria" id="n_cuenta_bancaria_persona">
                <label for="last_name">Nº Cuenta Bancaria</label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="email" class="validate" name="email" id="email_persona">
                <label for="last_name">Email</label>
            </div>
                
            <div class="input-field col s4">
                <input id="last_name" type="password" class="validate" name="password" id="password_persona">
                <label for="last_name">Password</label>
            </div>
                
            <div class="input-field col s4">
                <select class="browser-default" name="perfil_usuario">
                    <option value="" disabled selected>Perfiles Usuarios</option>
                    {% for perfilUsuario in perfilesUsuarios %}
                        <option value="{{ perfilUsuario }}" id="perfil_usuario_persona">{{ perfilUsuario }}</option>
                    {% endfor %}
                </select>
            </div>
                
            <div class="input-field col s12">
                <input id="last_name" type="text" class="validate" name="observaciones" id="observaciones_persona">
                <label for="last_name">Observaciones</label>
            </div>
                
        </div>
    </form>
</div>

