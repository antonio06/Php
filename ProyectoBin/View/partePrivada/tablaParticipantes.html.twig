<table id="tablaParticipantes" class="bordered">
        <tr>
            <td>Persona</td>
            <td>Actividades</td>
            <td>Perfiles</td>
            <td><a href="../../Controller/partePrivada/nuevoParticipante.php" id="anadirParticipante"><i class="fa fa-plus"></i></a></td>
        </tr>
        {% for participante in participantes %}
            <tr>
                <td>{{ participante.codigo_persona }}</td>
                <td>{{ participante.codigo_actividad }}</td>
                <td>{{ participante.codigo_perfil }}</td>
                {% if esAdministrador != null %}
                    <td><a href="../../Controller/partePrivada/modificarParticipa.php?codigo_persona={{ participante.codigo_persona }}" id="modificarParticipante"><i class="fa fa-pencil"></i></a> <a href="../../Controller/partePrivada/borrarParticipa.php?codigo_persona={{ participante.codigo_persona }}" id="borrarParticipante"><i class="fa fa-times"></i></a></td>
                        {% endif %}    
            </tr>
        {% endfor %}
    </table>
