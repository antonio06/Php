{% block contenidoPanel %}
    <div class="row">
        <form class="col s12" action="../../Controller/partePrivada/insertarActividad.php" method="post">
            <div class="row">
                <div class="input-field col s3">
                    <input id="last_name" type="text" class="validate" name="titulo">
                    <label for="last_name">Título</label>
                </div>
                <div class="input-field col s4">
                    <select class="browser-default" name="estado">
                        <option value="" disabled selected>Estado</option>
                        {% for estado in estados %}
                            <option value="{{estado}}">{{estado}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-field col s3">
                    <input id="last_name" type="text" class="validate" name="coordinador">
                    <label for="last_name">Coordinador</label>
                </div>
                <div class="input-field col s3">
                    <input id="last_name" type="text" class="validate" name="ponente">
                    <label for="last_name">Ponente</label>
                </div>
                <div class="input-field col s3">
                    <input id="last_name" type="text" class="validate" name="ubicacion">
                    <label for="last_name">Ubicación</label>
                </div>

                <div class="input-field col s3">
                    <label style="margin-top: -11%">Fecha Inicio</label>
                    <input id="last_name" type="date" class="validate" name="fecha_inicio">
                </div>
                <div class="input-field col s3">
                    <label style="margin-top: -11%">Fecha Fin</label>
                    <input id="last_name" type="date" class="validate" name="fecha_fin">
                </div>
                <div class="input-field col s3">
                    <label style="margin-top: -11%">Hora Inicio</label>
                    <input id="last_name" type="time" class="validate" name="horario_inicio">
                </div>
                <div class="input-field col s3">
                    <label style="margin-top: -11%">Hora Fin</label>
                    <input id="last_name" type="time" class="validate" name="horario_fin">
                </div>
                <div class="input-field col s3">
                    <input id="last_name" type="number" class="validate" name="n_Total_Horas">
                    <label for="last_name">Nº Total Horas</label>
                </div>
                <div class="input-field col s3">
                    <input id="last_name" type="number" class="validate" name="precio">
                    <label for="last_name">Precio</label>
                </div>
                <div class="input-field col s3">
                    <select class="browser-default" name="IVA">
                        <option value="" disabled selected>IVA</option>
                        {% for IVA in IVA %}
                            <option value="{{IVA}}">{{IVA}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-field col s4">

                    <select class="browser-default" name="descriptor">
                        <option value="" disabled selected>Descriptor</option>
                        {% for descriptor in descriptores %}
                            <option value="{{descriptor}}">{{descriptor}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="input-field col s6">
                    <textarea id="textarea1" class="materialize-textarea" name="observaciones"></textarea>
                    <label for="last_name">Observaciones</label>
                </div>
            </div>
            <input class="waves-effect waves-light btn" type="submit" value="Ingresar">
        </form>
    </div>
{% endblock %}
