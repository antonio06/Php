        <div class="nav-wrapper indigo lighten-3">
            <a href="#" class="brand-logo">Logo</a>
            <ul id="nav-mobile indigo lighten-3" class="right hide-on-med-and-down">
                <li><a href="../Controller/gestionActividades.php">Gestión Actividades</a></li>
                <li><a href="../Controller/gestionParticipantes.php">Gestión Participantes</a></li>
                <li><a href="../Controller/gestionPersonas.php">Gestión Personas</a></li>
